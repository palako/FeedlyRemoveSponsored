{
    "name": "Feedly Sponsored removal",
    "version": "1.0",
    "description": "Remove sponsored items from feeds",
    "permissions": ["activeTab", "declarativeContent", "storage", "https://feedly.com/"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/favicon.png",
        "default_title": "Feedly sponsored removal"
    },
    "manifest_version": 2
  }